@{
}

@model IEnumerable<Models.Product>

@foreach (Models.Product p in Model) {
    <div>
        <h3>@(p?.Name ?? "[None]")</h3>
        @(p?.Description ?? "[None]")
        <h4>@(p?.Price.ToString("c") ?? "[None]")</h4>
    </div>
}
